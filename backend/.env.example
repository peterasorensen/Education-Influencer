# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Replicate API Token (required for celebrity video generation and lip-sync)
# Get your token from: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=your_replicate_api_token_here

# Image-to-Video Model Selection
# Options:
#   - bytedance/seedance-1-pro-fast (cheaper, faster, default)
#   - kwaivgi/kling-v2.5-turbo-pro (higher quality, more expensive)
IMAGE_TO_VIDEO_MODEL=bytedance/seedance-1-pro-fast

# Lip-Sync Model Selection
# Options:
#   - tmappdev (default, most reliable)
#   - kling (alternative, has file upload issues)
#   - pixverse (alternative option)
LIPSYNC_MODEL=tmappdev

# Audio Generation Model Selection
# Options:
#   - (leave blank) Use default OpenAI TTS
#   - ttsds/tortoise:274f7fd0812bba7717154110a0ffd2930db847135ab234e23a9d7c35924b8a09 (Tortoise TTS with voice cloning)
AUDIO_MODEL=

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Output Configuration
OUTPUT_DIR=./output
MAX_CONCURRENT_JOBS=3

# Video Quality Settings
# Options: low_quality, medium_quality, high_quality
DEFAULT_VIDEO_QUALITY=medium_quality

# Audio Settings
AUDIO_SILENCE_DURATION_MS=500
AUDIO_BITRATE=192k

# Manim Settings
MANIM_QUALITY=medium_quality
MANIM_MAX_RETRIES=3

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=10

# File Cleanup
AUTO_CLEANUP_DAYS=7
KEEP_INTERMEDIATE_FILES=true
